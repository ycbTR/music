<% @playlist.each do |song| %>
    <% song_name = "#{song['artists'][0]['name']} - #{song['name']}" %>
    <% song_id = song['href'].split(':').last %>
    <li>
      <%= link_to song_name, "#{song['href']}",
                  :data => {
                          "song-name" => song_name,
                          "autoplay-url" => "https://embed.spotify.com/?uri=#{song["href"]}",
                          "url" => song["href"],
                          "album" => song['album']['name'],
                          "popularity" => song['popularity'],
                          "api-name" => "spotify",
                          "length" => song['length'],
                          "artist" => song['artists'][0]['name'],
                          "key" => song_id

                  },
                  :class => "play-track #{song_id}"
      %>
      <p title='<%= song['album']['name'] %>'><%= song['album']['name'] %></p>

      <div class='clear'></div>
    </li>
<% end %>