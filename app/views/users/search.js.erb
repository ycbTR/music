$("#grooveshark_loading").css("display","none");
$("#grooveshark_result_count").text("<%=@playlist.count if @playlist%> Results");
<%if @playlist && @playlist.count > 0 %>
$("#grooveshark_results").html("<p>No results found.</p>");
<%else%>
$("#grooveshark_results").html("<ul id='grooveshark_result_list' class='result-list'></ul>");
<%end%>
<%@playlist.each do |song| %>
 $("#grooveshark_result_list").append("<li>\
                            <a href='<%=song['Url']%>' target='m' title='<%=song['ArtistName']%> - <%=song['SongName']%>'><%=song['ArtistName']%> - <%=song['SongName']%></a>\
                            <p title='<%=song['AlbumName']%>'><%=song['AlbumName']%></p>\
                            <div class='clear'></div>\
                        </li>");
<%end%>

$('.listing-area p').ellipsis();
$('.listing-area ul li a').ellipsis();

$('.listing-area p').tooltip({"placement":"left","animation":true});
$('.listing-area ul li a').tooltip({"placement":"left","animation":true});